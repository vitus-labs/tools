{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "es2015",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "noEmit": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "stripInternal": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    // "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "build",
    "scripts",
    "tools",
    "examples",
    "src/**/*.test.*",
    "src/**/test.*",
    "src/**/__snapshots__/**/*"
  ]
}
