{
  "compilerOptions": {
    "types": ["@types/node"],
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "noEmit": true,
    "allowJs": true
  },
  "include": ["./*.js", "./*.cjs", "./*.mjs"]
}
