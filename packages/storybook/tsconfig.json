{
  "extends": "@vitus-labs/tools-typescript/lib",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "incremental": false,
    "declarationDir": "./lib/types",
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  }
}
