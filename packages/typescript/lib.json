{
  "compilerOptions": {
    "strict": false,
    "jsx": "react",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "es7", "es6", "dom"],
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "declaration": true
  }
}
