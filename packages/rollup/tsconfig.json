{
  "extends": "@vitus-labs/tools-typescript/lib",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./lib/types",
    "paths": {
      "~/*": ["src/*"]
    },
    "plugins": []
  },
  "include": ["typings", "src"],
  "exclude": ["node_modules", "__stories__", "lib"]
}
