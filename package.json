{
  "name": "@vitus-labs/tools-root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Pre-configured tooling for development",
  "author": "Vit Bokisch <vit@bokisch.com>",
  "license": "MIT",
  "homepage": "https://github.com/vitus-labs/tools#readme",
  "repository": "git@github.com:vitus-labs/tools.git",
  "bugs": {
    "url": "https://github.com/vitus-labs/tools/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "git config core.hooksPath .githooks",
    "release": "lerna publish --force-publish",
    "pkgs:clean": "rm -rf node_modules/ bun.lock && bun install",
    "pkgs:build": "lerna run build --stream",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "lerna run typecheck --stream",
    "format": "biome format --write .",
    "lint": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/node": "^25.3.1",
    "@types/react": "^19.2.14",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitus-labs/tools-lint": "*",
    "lerna": "^9.0.4",
    "react": "^19.2.4",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "bun@1.3.9"
}
