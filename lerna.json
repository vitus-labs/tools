{
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "version": "1.1.1",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ]
    },
    "version": {
      "allowBranch": "main",
      "exact": true
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
