{
  "npmClient": "yarn",
  "hoist": true,
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "0.30.0",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ]
    },
    "version": {
      "allowBranch": "main",
      "exact": true
    }
  }
}
