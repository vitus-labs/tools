{
  "npmClient": "npm",
  "packages": [
    "packages/*"
  ],
  "version": "1.8.0",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ]
    },
    "version": {
      "allowBranch": [
        "main",
        "feature/*",
        "release/*"
      ],
      "exact": true,
      "forcePublish": true,
      "preid": "alpha"
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}